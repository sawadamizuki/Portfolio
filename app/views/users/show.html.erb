<!--マイページ-->
<div class="container">
 <div class="row">
  <div class="col-md-2"><%= render 'posts/info', posts: @posts %></div>
  <div class="col-md-10">
　　<div>
　　 <p><%= attachment_image_tag @user, :profile_image, :fill, 70, 70, format: 'jpeg', class: "rounded-circle" %>
　　 <%= @user.name %>
　　 <% if @user.id == current_user.id %>
      <%= link_to "プロフィール編集", edit_user_path(@user) %>
     <% end %>
     <%= @user.introduction %>
　　</div>
    <hr>
　　<div class="row">
　　  <h4>投稿一覧</h4>
　　</div>
　　<div class="row">
　　  <% @posts.each do |post| %>
      <div class="shadow p-3 mb-5 bg-white rounded">
        <p><%= post.name %></p>
         <%= link_to post_path(post.id) do %>
         <p><%= attachment_image_tag post, :image, format: 'jpeg', size: "200x200" %></p>
         <% end %>
        投稿ユーザー:<%= post.user.name %>
　　　</div>
　　　<% end %>
　　　<%= paginate @posts %>
　　</div>
　　<hr>
　　<div class="row">
　　  <h4>いいねした投稿</h4>
　　</div>
　　<div class="row">
      <% @like_list.each do |post| %>
      <div class="shadow p-3 mb-5 bg-white rounded">
　　   <p><%= post.name %></p>
       <p><%= link_to post_path(post.id) do %>
        <%= attachment_image_tag post, :image, format: 'jpeg', size: "200x200" %>
       <% end %></p>
       <p>投稿ユーザー:<%= post.user.name %></p>
      </div>
      <% end %>
　　</div>
　</div>
 </div>
</div>