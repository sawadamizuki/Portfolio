<div class="container">
  <div class="row">
    <div class="col-3">
     <%= render 'posts/info', posts: @posts %>
    </div>
    <div class="col-9">
      <div class="row d-flex justify-content-center mt-5"><h2>ログイン</h2></div>
　　　<%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="row mt-4">
        <div class="col-2"><%= f.label :email, "メールアドレス" %></div>
        <div class="col-10"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
      </div>

      <div class="row mt-4">
        <div class="col-2"><%= f.label :password, "パスワード" %></div>
        <div class="col-10"><%= f.password_field :password, autocomplete: "current-password" %></div>
      </div>

      <!--<% if devise_mapping.rememberable? %>-->
      <!--  <div class="row mt-4">-->
      <!--    <%= f.check_box :remember_me %><%= f.label :remember_me %>-->
      <!--  </div>-->
      <!--<% end %>-->

      <div class="row mt-4">
        <div class="col-2"><%= f.submit "Log in", class: "btn btn-info" %></div>
      </div>
      <% end %>

      <!--<%= render "devise/shared/links" %>-->
    </div>
  </div>
</div>
